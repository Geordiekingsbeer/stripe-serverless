{
  "builds": [
    {
      "src": "function/*.js",
      "use": "@vercel/node"
    }
  ],
  "headers": [
    {
      "source": "/function/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods": "GET,OPTIONS,POST,PUT,PATCH,DELETE" },
        { "key": "Access-Control-Allow-Headers": "Content-Type" }
      ]
    }
  ],
  "redirects": [
    { 
      "source": "/api/admin-save-layout", 
      "destination": "/function/admin-save-layout", 
      "permanent": true 
    }
  ]
}
