{
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "headers": [
    {
      "source": "/api/create-checkout",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://geordiekingsbeer.github.io" },
        { "key": "Access-Control-Allow-Methods", "value": "POST, OPTIONS, GET" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ],
  "routes": [
    { 
      "src": "/api/create-checkout",
      "methods": ["OPTIONS"], 
      "dest": "/api/cors-preflight.js" 
    },
    { 
      "src": "/api/create-checkout", 
      "dest": "/api/create-checkout.js" 
    }
  ]
}
